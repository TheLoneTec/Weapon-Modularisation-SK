<?xml version="1.0" encoding="utf-8" ?>
<Defs>

	<ThingCategoryDef>
		<defName>ThingCategory_HvySMGGunParts</defName>
		<label>SMG parts</label>
		<parent>ThingCategory_GunParts</parent>
	</ThingCategoryDef>

	<ThingDef Name="HvySMGGunPartBase" ParentName="GunPartBase"  Abstract="True">
		<thingCategories>
			<li>ThingCategory_HvySMGGunParts</li>
		</thingCategories>
	</ThingDef>

	<ThingDef ParentName="HvySMGGunPartBase">
		<defName>Module_HvySMG_MagClip</defName>
		<label>SMG magazine</label>
		<description>Standard 30 round clip magazine designed for heavy SMG.</description>
		<graphicData>
			<texPath>Things/WeaponPart/Parts/AttachmentItem_Magazine_Pistol</texPath>
		</graphicData>
		<uiIconPath>ui/icons/AttachmentIcon/AttachmentIcon_Mag_Pistol</uiIconPath>
		<statBases>
			<WorkToMake>500</WorkToMake>
		</statBases>
		<recipeMaker>
			<researchPrerequisite>BlowbackOperation</researchPrerequisite>
		</recipeMaker>
		<stuffCategories>
			<li>Metallic</li>
		</stuffCategories>
		<costStuffCount>15</costStuffCount>
		<costList>
			<Weapon_Parts>1</Weapon_Parts>
		</costList>
		<comps>
			<li Class="RW_ModularizationWeapon.CompProperties_ModularizationWeapon">
				<PartTexPath>Things/WeaponPart/Gun/HeavySMG/HeavySMG_Magazine</PartTexPath>
				<verbPropertiesObjectPatch>
					<li>
						<burstShotCount>3</burstShotCount>
					</li>
				</verbPropertiesObjectPatch>
			</li>
		</comps>
	</ThingDef>

	<ThingDef ParentName="HvySMGGunPartBase">
		<defName>Module_HvySNG_MagDrum</defName>
		<label>SMG drum magazine</label>
		<description>100 round drum magazine provides better sustained firepower, at the cost of reload speed. It also affects the center of gravity of the gun, making it unwieldy.</description>
		<graphicData>
			<texPath>Things/WeaponPart/Parts/AttachmentItem_Magazine_Drum</texPath>
		</graphicData>
		<uiIconPath>ui/icons/AttachmentIcon/AttachmentIcon_Mag_Drum</uiIconPath>
		<statBases>
			<Mass>0.6</Mass>
			<WorkToMake>2500</WorkToMake>
		</statBases>
		<recipeMaker>
			<researchPrerequisite>BlowbackOperation</researchPrerequisite>
		</recipeMaker>
		<stuffCategories>
			<li>Metallic</li>
		</stuffCategories>
		<costStuffCount>25</costStuffCount>
		<costList>
			<Weapon_Parts>1</Weapon_Parts>
		</costList>
		<comps>
			<li Class="RW_ModularizationWeapon.CompProperties_ModularizationWeapon">
				<PartTexPath>Things/WeaponPart/Gun/HeavySMG/HeavySMG_CartridgeDrum</PartTexPath>
				<verbPropertiesObjectPatch>
					<li>
						<burstShotCount>5</burstShotCount>
					</li>
				</verbPropertiesObjectPatch>
				<verbPropertiesMultiplier>
					<li>
						<warmupTime>1.1</warmupTime>
					</li>
				</verbPropertiesMultiplier>
				<statMultiplier>
					<RangedWeapon_Cooldown>1.2</RangedWeapon_Cooldown>
				</statMultiplier>
			</li>
		</comps>
	</ThingDef>

	<ThingDef ParentName="HvySMGGunPartBase">
		<defName>Module_HvySMG_Chamber</defName>
		<label>reinforced receiver</label>
		<description>TODO</description>
		<graphicData>
			<texPath>Things/WeaponPart/Parts/AttachmentItem_Component_Generic</texPath>
		</graphicData>
		<uiIconPath>ui/icons/AttachmentIcon/AttachmentIcon_Receiver_Component</uiIconPath>
		<statBases>
			<Mass>0.1</Mass>
		</statBases>
		<recipeMaker>
			<researchPrerequisite>BlowbackOperation</researchPrerequisite>
		</recipeMaker>
		<stuffCategories>
			<li>Metallic</li>
		</stuffCategories>
		<costStuffCount>25</costStuffCount>
		<costList>
			<Weapon_Parts>2</Weapon_Parts>
		</costList>
		<comps>
			<li Class="RW_ModularizationWeapon.CompProperties_ModularizationWeapon">
				<notDrawInParent>true</notDrawInParent>
				<verbPropertiesMultiplier>
					<li>
						<ticksBetweenBurstShots>0.75</ticksBetweenBurstShots>
					</li>
				</verbPropertiesMultiplier>
				<statMultiplier>
				</statMultiplier>
			</li>
		</comps>
	</ThingDef>

	<ThingDef ParentName="HvySMGGunPartBase">
		<defName>Module_HvySMG_WireStock</defName>
		<label>wire stock</label>
		<description>A better-than-nothing stock that can somehow improve firing stability.</description>
		<graphicData>
			<texPath>Things/WeaponPart/Parts/AttachmentItem_Stock_Simple</texPath>
		</graphicData>
		<uiIconPath>ui/icons/AttachmentIcon/AttachmentIcon_Stock_Simple</uiIconPath>
		<statBases>
			<Mass>0.1</Mass>
			<WorkToMake>500</WorkToMake>
		</statBases>
		<stuffCategories>
			<li>Metallic</li>
		</stuffCategories>
		<costStuffCount>15</costStuffCount>
		<costList>
			<Weapon_Parts>1</Weapon_Parts>
		</costList>
		<recipeMaker>
			<researchPrerequisite>BlowbackOperation</researchPrerequisite>
		</recipeMaker>
		<comps>
			<li Class="RW_ModularizationWeapon.CompProperties_ModularizationWeapon">
				<PartTexPath>Things/WeaponPart/Gun/HeavySMG/HeavySMG_Stock</PartTexPath>
				<verbPropertiesOffseter>
					<li>
						<warmupTime>0.2</warmupTime>
					</li>
				</verbPropertiesOffseter>
				<statMultiplier>
				</statMultiplier>
			</li>
		</comps>
	</ThingDef>

	<ThingDef ParentName="HvySMGGunPartBase">
		<defName>Module_HvySMG_Stock</defName>
		<label>combat stock</label>
		<description>A ergonomical stock that can improve firing stability.</description>
		<graphicData>
			<texPath>Things/WeaponPart/Parts/AttachmentItem_Stock_Generic</texPath>
		</graphicData>
		<uiIconPath>ui/icons/AttachmentIcon/AttachmentIcon_Stock</uiIconPath>
		<statBases>
			<Mass>0.3</Mass>
		</statBases>
		<recipeMaker>
			<researchPrerequisite>SMG_C2</researchPrerequisite>
		</recipeMaker>
		<stuffCategories>
			<li>Metallic</li>
		</stuffCategories>
		<costStuffCount>25</costStuffCount>
		<costList>
			<Weapon_Parts>2</Weapon_Parts>
		</costList>
		<comps>
			<li Class="RW_ModularizationWeapon.CompProperties_ModularizationWeapon">
				<PartTexPath>Things/WeaponPart/Gun/HeavySMG/HeavySMG_Stock2</PartTexPath>
				<verbPropertiesOffseter>
					<li>
						<warmupTime>0.3</warmupTime>
					</li>
				</verbPropertiesOffseter>
				<statMultiplier>
				</statMultiplier>
			</li>
		</comps>
	</ThingDef>
</Defs>