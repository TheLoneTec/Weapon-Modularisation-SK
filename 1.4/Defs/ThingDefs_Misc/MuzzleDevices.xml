<?xml version="1.0" encoding="utf-8" ?>
<Defs>
	<ThingDef ParentName="GunPartBase">
		<defName>Module_Silencer</defName>
		<label>silencer</label>
		<description>An complex muzzle device that muffles gun shot sound.</description>
		<graphicData>
			<texPath>Things/WeaponPart/Parts/AttachmentItem_Muzzle_Suppresor</texPath>
		</graphicData>
		<uiIconPath>ui/icons/AttachmentIcon/AttachmentIcon_Muzzle_Suppresor</uiIconPath>
		<statBases>
			<WorkToMake>3000</WorkToMake>
			<Mass>0.5</Mass>
		</statBases>
		<stuffCategories>
			<li>Metallic</li>
		</stuffCategories>
		<costStuffCount>20</costStuffCount>
		<costList>
			<ComponentIndustrial>1</ComponentIndustrial>
			<Plastic>10</Plastic>
			<Rubber>15</Rubber>
		</costList>
		<recipeMaker>
			<recipeUsers>
				<li>WeaponCraftingWorkTable</li>
				<li>AdvWeaponCraftingWorkTable</li>
				<li>AdvToolBench</li>
				<li>HeavyArmsBench</li>
			</recipeUsers>
			<researchPrerequisite>Pistols_C2</researchPrerequisite>
		</recipeMaker>
		<comps>
			<li Class="RW_ModularizationWeapon.CompProperties_ModularizationWeapon">
				<PartTexPath>Things/WeaponPart/Gun/AssaultRifle/AssaultRifle_Muffler</PartTexPath>
				<verbPropertiesObjectPatch>
					<li>
						<soundCast>Shot_Silenced</soundCast>
						<soundCastTail IsNull="true"/>
					</li>
				</verbPropertiesObjectPatch>
				<statMultiplier>
					<AccuracyTouch>1.15</AccuracyTouch>
					<AccuracyShort>1.15</AccuracyShort>
				</statMultiplier>
				<statOffset>
					<HuntingStealth>.5</HuntingStealth>
				</statOffset>
			</li>
		</comps>
	</ThingDef>

	<ThingDef ParentName="GunPartBase">
