			<texPath>Things/WeaponPart/Parts/AttachmentItem_Muzzle_Brake</texPath>
		</graphicData>
		<uiIconPath>ui/icons/AttachmentIcon/AttachmentIcon_Muzzle_Brake</uiIconPath>
		<statBases>
			<Mass>0.1</Mass>
		</statBases>
		<stuffCategories>
			<li>Metallic</li>
		</stuffCategories>
		<costStuffCount>15</costStuffCount>
		<costList>
			<ComponentIndustrial>1</ComponentIndustrial>
			<Rubber>6</Rubber>
		</costList>
		<recipeMaker>
			<recipeUsers>
				<li>WeaponCraftingWorkTable</li>
				<li>AdvWeaponCraftingWorkTable</li>
				<li>AdvToolBench</li>
				<li>HeavyArmsBench</li>
			</recipeUsers>
			<researchPrerequisite>BlowbackOperation</researchPrerequisite>
		</recipeMaker>
		<comps>
			<li Class="RW_ModularizationWeapon.CompProperties_ModularizationWeapon">
				<PartTexPath>Things/WeaponPart/Gun/AssaultRifle/AssaultRifle_MuzzleBrake</PartTexPath>
				<statMultiplier>
					<AccuracyMedium>1.125</AccuracyMedium>
					<AccuracyLong>1.125</AccuracyLong>
				</statMultiplier>
			</li>
		</comps>
	</ThingDef>

