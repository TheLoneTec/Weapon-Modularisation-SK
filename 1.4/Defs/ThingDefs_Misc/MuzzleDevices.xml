	<ThingDef ParentName="GunPartBase">
		<defName>Module_Bayonet</defName>
		<label>bayonet</label>
		<description>A muzzle device that reduces muzzle flash.</description>
		<stackLimit>1</stackLimit>
		<graphicData>
			<texPath>Things/WeaponPart/Gun/AssaultRifle/Bayonet</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<uiIconPath>Things/WeaponPart/Gun/AssaultRifle/Bayonet</uiIconPath>
		<statBases>
			<Mass>0.1</Mass>
		</statBases>
		<stuffCategories>
			<li>Metallic</li>
		</stuffCategories>
		<costStuffCount>40</costStuffCount>
		<costList>
			<ComponentIndustrial>1</ComponentIndustrial>
		</costList>
		<recipeMaker>
			<recipeUsers>
				<li>WeaponCraftingWorkTable</li>
				<li>AdvWeaponCraftingWorkTable</li>
				<li>AdvToolBench</li>
				<li>HeavyArmsBench</li>
			</recipeUsers>
			<researchPrerequisite>Rifles_C1</researchPrerequisite>
		</recipeMaker>
		<techLevel>Industrial</techLevel>
		<tools>
			<li>
				<label>blade</label>
